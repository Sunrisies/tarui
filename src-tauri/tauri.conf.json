{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tauri-app",
    "version": "0.0.0"
  },
  "plugins": {
    "name": "cli"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true
    },
      "fs": {
        "all": true,
        "readFile": true,
        "scope": ["$APPDATA/databases/*","C:\\Users\\hover\\Desktop\\test\\pc\\my-tauti\\tauri-app","/Users/zhuzhongqian/Desktop/*"],
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },"http": {
        "all": true, 
        "request": true ,
        "scope": ["http://baidu.com/","http://localhost:3000"]
      }
    },
    "windows": [
      {
        "title": "tauri-app",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.devtesting",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
  }
}
